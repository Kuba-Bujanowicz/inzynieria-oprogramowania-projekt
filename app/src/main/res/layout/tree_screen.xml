<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Button
            android:id="@+id/closeTree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"

            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:id="@+id/textinfo"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="tury do ewolucji:"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:visibility="gone"
    />
    <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@+id/textinfo"/>
    <ScrollView
            android:layout_width="630dp"
            android:layout_height="330dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/zwoj"



        >
            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                      android:text="STAROŻYTNOŚĆ"
                      android:textSize="30sp"
                      android:textAlignment="center"
            />
        <!-- Pierwszy wiersz -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <Button
                    android:text="WŁÓCZNIE"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/starozytnosc_1"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="#ffffff"
                    android:padding="10dp"
                    android:textColor="@color/black"

            />
            <Button
                    android:text="ŁUKI"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/starozytnosc_2"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="#ffffff"
                    android:padding="10dp"
                    android:textColor="@color/black"
            />
            <Button
                    android:text="SOKOLI WZROK"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/starozytnosc_3"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="#ffffff"
                    android:padding="10dp"
                    android:textColor="@color/black"
            />

        </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                          android:layout_weight="2"
                          android:textAlignment="center"
                          android:layout_marginLeft="30dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:backgroundTint="#ffffff"
                          android:textColor="@color/black"
                          android:text="Pozwala szkolić włóczników (5 tur)"
                />
                <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                          android:layout_weight="2"
                          android:textAlignment="center"
                          android:layout_marginLeft="50dp"
                          android:layout_marginRight="50dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:backgroundTint="#ffffff"
                          android:textColor="@color/black"
                          android:text="Pozwala szkolić łuczników (5 tur)"
                />
                <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                          android:layout_weight="2"
                          android:textAlignment="center"
                          android:layout_marginRight="30dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:backgroundTint="#ffffff"
                          android:textColor="@color/black"
                          android:text="Zwiększa zawięg widzenia jednostek o 1 pole (5 tur)"
                />

            </LinearLayout>
        </LinearLayout>
            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                      android:text="ŚREDNIOWIECZE"
                      android:textSize="30sp"
                      android:textAlignment="center"
            />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <Button
                        android:text="OBRÓBKA METALI"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/sredniowiecze_1"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:textAlignment="center"
                        android:clickable="false"
                        android:enabled="false"
                        android:focusable="false"
                        android:backgroundTint="#424242"
                        android:padding="10dp"
                        android:textColor="@color/black"
                />
                <Button
                        android:text="BEŁTY"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/sredniowiecze_2"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:clickable="false"
                        android:focusable="false"
                        android:enabled="false"
                        android:backgroundTint="#424242"
                        android:padding="10dp"
                        android:textColor="@color/black"
                />
                <Button
                        android:text="ZBROJE"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/sredniowiecze_3"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:enabled="false"
                        android:backgroundTint="#424242"
                        android:padding="10dp"
                        android:textColor="@color/black"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                          android:layout_weight="2"
                          android:textAlignment="center"
                          android:layout_marginLeft="30dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:backgroundTint="#ffffff"
                          android:textColor="@color/black"
                          android:text="Pozwala szkolić rycerzy (6 tur)"
                />
                <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                          android:layout_weight="2"
                          android:textAlignment="center"
                          android:layout_marginLeft="50dp"
                          android:layout_marginRight="50dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:backgroundTint="#ffffff"
                          android:textColor="@color/black"
                          android:text="Pozwala szkolić kuszników (6 tur)"
                />
                <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                          android:layout_weight="2"
                          android:textAlignment="center"
                          android:layout_marginRight="30dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:backgroundTint="#ffffff"
                          android:textColor="@color/black"
                          android:text="Zwiększa zdrowie jednostek o 15 (6 tur)"
                />

            </LinearLayout>
        </LinearLayout>
            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                      android:text="NOWOŻYTNOŚĆ"
                      android:textSize="30sp"
                      android:textAlignment="center"
            />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <Button
                        android:text="HALABARDY"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/nowozytnosc_1"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:textAlignment="center"
                        android:clickable="false"
                        android:focusable="false"
                        android:enabled="false"
                        android:backgroundTint="#424242"
                        android:padding="10dp"
                        android:textColor="@color/black"
                />
                <Button
                        android:text="PROCH STRZELNICZY"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/nowozytnosc_2"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:clickable="false"
                        android:focusable="false"
                        android:enabled="false"
                        android:backgroundTint="#424242"
                        android:padding="10dp"
                        android:textColor="@color/black"
                />
                <Button
                        android:text="ROZWÓJ BRONI"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/nowozytnosc_3"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:enabled="false"
                        android:backgroundTint="#424242"
                        android:padding="10dp"
                        android:textColor="@color/black"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                          android:layout_weight="2"
                          android:textAlignment="center"
                          android:layout_marginLeft="30dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:backgroundTint="#ffffff"
                          android:textColor="@color/black"
                          android:text="Pozwala szkolić halabardziarzy (7 tur)"
                />
                <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                          android:layout_weight="2"
                          android:textAlignment="center"
                          android:layout_marginLeft="50dp"
                          android:layout_marginRight="50dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:backgroundTint="#ffffff"
                          android:textColor="@color/black"
                          android:text="Pozwala szkolić arkebuzerów (7 tur)"
                />
                <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                          android:layout_weight="2"
                          android:textAlignment="center"
                          android:layout_marginRight="30dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:backgroundTint="#ffffff"
                          android:textColor="@color/black"
                          android:text="Zwiększa obrażenia jednostek o 25 (7 tur)"
                />

            </LinearLayout>
        </LinearLayout>
            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                      android:text="TERAŹNIEJSZOŚĆ"
                      android:textSize="30sp"
                      android:textAlignment="center"
            />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <Button
                        android:text="PIECHOTA"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/terazniejszosc_1"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:textAlignment="center"
                        android:clickable="false"
                        android:focusable="false"
                        android:enabled="false"
                        android:backgroundTint="#424242"
                        android:padding="10dp"
                        android:textColor="@color/black"
                />
                <Button
                        android:text="KARABINY"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/terazniejszosc_2"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:clickable="false"
                        android:enabled="false"
                        android:focusable="false"
                        android:backgroundTint="#424242"
                        android:padding="10dp"
                        android:textColor="@color/black"
                />
                <Button
                        android:text="WIELKI ROZWÓJ"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/terazniejszosc_3"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:enabled="false"
                        android:backgroundTint="#424242"
                        android:padding="10dp"
                        android:textColor="@color/black"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                          android:layout_weight="2"
                          android:textAlignment="center"
                          android:layout_marginLeft="30dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:backgroundTint="#ffffff"
                          android:textColor="@color/black"
                          android:text="Pozwala szkolić piechote (8 tur)"
                />
                <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                          android:layout_weight="2"
                          android:textAlignment="center"
                          android:layout_marginLeft="50dp"
                          android:layout_marginRight="50dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:backgroundTint="#ffffff"
                          android:textColor="@color/black"
                          android:text="Pozwala szkolić snajperów (8 tur)"
                />
                <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                          android:layout_weight="2"
                          android:textAlignment="center"
                          android:layout_marginRight="30dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:backgroundTint="#ffffff"
                          android:textColor="@color/black"
                          android:text="Otrzymujesz darmowe jednostki (8 tur)"
                />

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <!-- Dodaj inne elementy interfejsu użytkownika według potrzeb -->



</androidx.constraintlayout.widget.ConstraintLayout>